.footer
  position fixed
  bottom 0
  background #ffffff
  color #000000ff
  padding 15px 40px
  font-size 14px
  width 100%
  border-top 1px solid rgba(0, 0, 0, 0.05)
  letter-spacing -0.01em
  .footer-container
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    max-width 1200px
    margin 0 auto
  a
    color #000
    text-decoration none
    margin 0 10px
    font-weight 600
    &:hover
      opacity 0.7
  .footer-left,
  .footer-right
    margin: 5px 0
    display flex
    justify-content center
    align-items center
    svg
      font-size 22px
      display block

// Responsive
@media (max-width: 768px)
  .footer
    padding 2px 5px
    .footer-container
      flex-direction column
      justify-content center
      align-items center
      padding-top 5px
      gap 6px
    .footer-left,
    .footer-right
      margin 0
      width 100%
      text-align center
      svg
        font-size 20px
     
