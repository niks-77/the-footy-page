.typefilter-group
  display inline-flex
  align-items center
  background #d3e1efff
  border-radius 1000px
  gap 5px
  padding 6px
  height 35px

  button
    padding 8px 12px
    border 0
    border-radius 1000px
    height 95%
    background #d3e1efff
    font-size 14px
    font-weight 500
    color gray 
    transition all .3s ease-in-out
    display inline-flex
    align-items center
    gap 6px

    
    &:nth-child(2):disabled
      background #d81010ff
      color white
      
      .live-indicator
         background white
         animation pulse-white 1.5s infinite

    &:disabled
      background #049810ff
      color white

  .live-indicator
    width 6px
    height 6px
    background #d81010ff
    border-radius 50%
    animation pulse 1.5s infinite

@keyframes pulse
  0%
    transform scale(0.95)
    box-shadow 0 0 0 0 rgba(216, 16, 16, 0.7)
  70%
    transform scale(1)
    box-shadow 0 0 0 4px rgba(216, 16, 16, 0)
  100%
    transform scale(0.95)
    box-shadow 0 0 0 0 rgba(216, 16, 16, 0)

@keyframes pulse-white
  0%
    transform scale(0.95)
    box-shadow 0 0 0 0 rgba(255, 255, 255, 0.7)
  70%
    transform scale(1)
    box-shadow 0 0 0 4px rgba(255, 255, 255, 0)
  100%
    transform scale(0.95)
    box-shadow 0 0 0 0 rgba(255, 255, 255, 0)


      
