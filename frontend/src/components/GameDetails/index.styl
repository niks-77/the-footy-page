.modal-backdrop
  position fixed
  inset 0
  background rgba(0, 0, 0, 0.6)
  display flex
  justify-content center
  align-items center
  z-index 1000
  padding 20px

.modal-backdrop
  animation fadeIn 0.25s ease forwards

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1


.modal-content
  animation popIn 0.3s ease forwards

@keyframes popIn
  from
    opacity 0
    transform scale(0.95) translateY(10px)
  to
    opacity 1
    transform scale(1) translateY(0)

.modal-content
  background white
  border-radius 20px
  width 600px
  max-width 95%
  max-height 100vh
  overflow-y auto
  box-shadow 0 20px 50px rgba(0,0,0,0.4)
  position relative
  padding-bottom 20px

.match-info-section
  display grid
  grid-template-columns repeat(auto-fit, minmax(120px, 1fr))
  gap 15px
  margin-top 20px
  padding 15px
  background #fcfcfc
  border-radius 12px
  border 1px solid #f0f0f0

.info-item
  display flex
  flex-direction column
  align-items center
  text-align center
  gap 10px

.info-label
  display flex
  align-items center
  gap 6px
  color #888
  font-size 13px
  text-transform uppercase
  font-weight 700
  letter-spacing 0.5px
  
  svg
    color #aaa

.info-value
  font-size 15px
  font-weight 600
  color #333
  margin 0

  &.time
    color #2a7224
    font-size 16px
    font-weight 800

.close-btn
  position absolute
  top 14px
  right 14px
  border none
  background transparent
  font-size 15px
  cursor pointer
  font-weight bold
  z-index 10

  &:hover
    background #ebebeb
    border-radius 50%

.game-details
  padding 25px
  position relative

  .league-header
    display flex
    align-items center
    gap 8px
    font-size 16px
    font-weight bold
    margin-bottom 4px

  .league-icon
    width 24px
    height 24px
    object-fit contain

  .league-country
    font-size 14px
    color #666
    display block
    margin-bottom 20px

.team-name
  font-size 16px
  font-weight 600
  text-align center  
  color #333
  max-width none
  overflow visible

.score-container
  display flex
  flex-direction column
  align-items center
  gap 10px
  flex 0 0 120px

.match-status
  font-size 14px
  font-weight 800
  text-transform uppercase
  padding 4px 12px
  border-radius 20px
  letter-spacing 0.5px
  display inline-block

  &.live
    color #ff2e2e
    background rgba(255, 46, 46, 0.1)
    border 1px solid rgba(255, 46, 46, 0.2)
    animation pulse 2s infinite ease-in-out

  &.finished
    color #666
    background #f0f0f0
    border 1px solid #e0e0e0

  &.upcoming
    color #3d7bff
    background rgba(61, 123, 255, 0.1)
    border 1px solid rgba(61, 123, 255, 0.2)

.score-board
  display flex
  align-items center
  justify-content center
  gap 12px

.score-num
  font-size 26px
  font-weight 800
  color #222
  font-variant-numeric tabular-nums

.score-divider
  font-size 24px
  font-weight 400
  color #ccc

.vs-label
  font-size 20px
  font-weight 700
  color #a48370ff
  text-transform uppercase
  letter-spacing 2px

.head-to-head
  display flex
  justify-content space-between
  align-items center
  padding 20px 0
  border-bottom 1px solid #f0f0f0
  margin-bottom 15px

  .team
    display flex
    flex-direction column
    align-items center
    gap 2px
    flex 1

    img
      width 40px
      height 40px
      object-fit contain

  & > span
    font-size 24px
    font-weight bold
    color #333
    margin 0 20px

.stats-container
  display flex
  flex-direction column
  gap 13px
  margin-top 5px

.stats-row
  display flex
  justify-content space-between
  align-items center
  font-size 14px
  background #f9f9f9
  padding 10px 20px
  border-radius 8px
  transition background 0.2s ease

  &:hover
    background #f0f0f0

  span
    font-weight 700
    min-width 30px
    text-align center

  span:first-child
    color #2e7d32
    background-color rgba(46, 125, 50, 0.1)
    border-radius 4px
    padding 2px 8px

  span:last-child
    color #c62828
    background-color rgba(198, 40, 40, 0.1)
    border-radius 4px
    padding 2px 8px

.stats-unavailable
  text-align center
  padding 40px 0
  color #666


