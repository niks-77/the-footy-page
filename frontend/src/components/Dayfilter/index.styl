.dayfilter-group
  display flex
  gap 50px
  justify-content center
  align-items center
  font-size 20px
  height 35px

  button
    padding 8px 12px
    border 0
    border-radius 1000px
    height 98%
    background #d3e1efff
    font-size 13px
    color rgba(37, 37, 37, 1) 
    transition all .3s ease-in-out
    display inline-flex
    align-items center
    gap 6px

@media (max-width: 800px)    
  .dayfilter-group
    gap 20px
    font-size 16px  