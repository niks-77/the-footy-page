.game-details
  max-width 900px
  margin 40px auto
  padding 20px
  background white
  border-radius 14px
  box-shadow 0 5px 18px rgba(0, 0, 0, 0.15)

.head-to-head
  display flex
  justify-content space-between
  align-items center
  font-size 22px
  font-weight 600
  padding 20px
  border-bottom 1px solid #e1e1e1

.detTeam
  display flex
  align-items center
  gap 10px

.detTeam img
  width 55px
  height 55px
  border-radius 50%

.stats
  margin-top 25px
  display flex
  flex-direction column
  gap 14px

.stats-row
  display flex
  justify-content space-between
  align-items center
  font-size 18px
  background #f7f7f7
  padding 12px 18px
  border-radius 10px
  transition background 0.2s ease

  &:hover
    background #ebebeb

  span:first-child
    color #006400
    background-color rgba(0, 100, 0, 0.1)
    border-radius 6px
    padding 4px 6px

  span:last-child
    color #8B0000
    background-color rgba(139, 0, 0, 0.1)
    border-radius 6px
    padding 4px 6px
