.homepage
  display flex
  flex-direction column
  gap 40px
  width 97%
  padding 20px
  min-height 1000px

.search-container
  max-width 500px
  width 25%

.search-form
  width 100%
  box-shadow 5px 5px lightblue
  padding 15px
  background rgba(255,255,255,0.85)
  border-radius 12px
  display flex
  gap 10px

.search-form input
  width 100%
  padding 10px 15px
  font-size 15px
  border-radius 8px
  border 1px solid #ccc

.date-picker
  display flex
  flex-direction column
  gap 10px

.date-picker button
  padding 8px 14px
  border-radius 8px
  border 5px solid #c6a7a7
  cursor pointer

.date-picker button:disabled
  background #e5e5e5
  cursor default
