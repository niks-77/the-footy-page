.homepage
  display flex
  gap 40px
  width 97%
  padding 20px
  min-height 1000px

.games-column
  width 90%
  display flex
  flex-direction column
  gap 25px

.league-games
  display flex
  flex-direction row
  flex-wrap wrap
  gap 20px
  width 100%

.form-column
  width 40%
  margin-left 40px
  display flex
  justify-content flex-start
  align-items flex-start

.search-form
  width 100%
  box-shadow 5px 5px lightblue
  padding 15px
  background rgba(255,255,255,0.85)
  border-radius 12px
  display flex
  gap 10px

.search-form input
  width 100%
  padding 10px 15px
  font-size 15px
  border-radius 8px
  border 1px solid #ccc

.date-picker
  display flex
  flex-direction column
  gap 10px

.date-picker button
  padding 8px 14px
  border-radius 8px
  border 5px solid #c6a7a7
  cursor pointer

.date-picker button:disabled
  background #e5e5e5
  cursor default
